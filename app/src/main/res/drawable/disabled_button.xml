<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Light gray color for disabled state -->
        </shape>
    </item>
    <!-- Default state when the button is enabled -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_light"/> <!-- Red color for enabled state -->
        </shape>
    </item>
</selector>
