<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/shinetsuLogo"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/shin_etsu" />

    <TextView
        android:id="@+id/details"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="0dp"
        android:background="#01a0c4"
        android:gravity="center"
        android:padding="2dp"
        android:text="OPERATOR DETAILS"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/detailsbg"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="0dp"
        android:background="#cedfe3"
        android:gravity="center"
        android:padding="2dp"
        android:text=" "
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="98dp"
        android:background="#345F8E"
        android:gravity="center"
        android:padding="4dp"
        android:text="NAME: "
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dataName"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="99dp"
        android:layout_toEndOf="@+id/displayID"
        android:padding="4dp" />

    <TextView
        android:id="@+id/displayID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="138dp"
        android:background="#345F8E"
        android:gravity="center"
        android:padding="4dp"
        android:text="ID N0. : "
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dataID"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="139dp"
        android:padding="4dp" />


    <TextView
        android:id="@+id/autoTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-1dp"
        android:background="#4E4D4C"
        android:gravity="center"
        android:padding="16dp"
        android:text="Automation Engineering Â© "
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
